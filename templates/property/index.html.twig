{% extends "base.html.twig" %}

{% block title 'Voir tous nos biens' %}

{% block body %}
<div class="jumboton">
    <div class="container mt-4">
      {{ form_start (form) }}
      <div class="form-row align-items-end">
        <div class="col">
          {{ form_row (form.minSurface) }}
          </div>
            <div class="col">
              {{ form_row (form.maxPrice) }}
            </div>
        <div class="col">
        {{ form_row (form.options) }}
      </div>
  <div class="col">
   <div class="form-group">
      <input class="form-control" type="text" value="" placeholder="Ville" id="seach_address">
    </div>
      </div>
          <div class="col">
            {{ form_row (form.distance) }}
          </div>
          <div class="col">
            <div class="form-group">
              <button class="btn btn-primary">Recherche</button>
            </div>
          </div>
        </div>
        {{ form_end (form) }}
      </div>
    </div>
    <div class="container mt-4">
  <h1>Voir tous nom biens</h1>
  <div class="row">
    {% for property in properties %}
    <div class="col-md-4">
      {% include 'property/_property.html.twig' %}
    </div>
    {% endfor %}
  </div>
  <div class="pagination">
    {{ knp_pagination_render(properties) }}
  </div>
</div>
{% endblock %}